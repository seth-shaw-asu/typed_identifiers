<%
   section_id = "typed_identifiers" if section_id.blank?
   section_title = "Typed IDs" if section_title.blank?
%>

<section id="<%= section_id %>">
  <h3><%= section_title %></h3>
  <div class="details my-3" id="<%= section_id %>_accordion">
    <% typed_identifiers.each_with_index do | typed_identifier, index | %>
      <div class="card mb-3">
        <div class="card-header panel-heading">
          <div class="row accordion-toggle collapsed" data-toggle="collapse" data-parent="#<%= section_id %>_accordion" href="#<%= section_id %>_typed_identifier_<%= index %>">
            <div class="col-md-1">
              <span class="glyphicon"></span>
            </div>
            <div class="col-md-6">
              <%= typed_identifier["typed_identifier"] %>

            </div>
          </div>
        </div>
        <div id="<%= section_id %>_typed_identifier_<%= index %>" class="panel-collapse collapse">
          <%= read_only_view(typed_identifier) %>
        </div>
      </div>
    <% end %>
  </div>
</section>
